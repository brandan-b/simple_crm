<div class="box" style="display:flex; align-items:center; gap:16px;">
  <% if customer.image.attached? %>
    <figure class="image is-96x96">
      <%= image_tag customer.image, size: "96x96", class: "is-rounded" %>
    </figure>
  <% end %>
  <div>
    <h3 class="title is-5"><%= customer.full_name %></h3>
    <p><strong>Phone:</strong> <%= customer.phone_number %></p>
    <p><strong>Email:</strong> <%= customer.email_address.presence || "N/A" %></p>
    <p><strong>Notes:</strong> <%= customer.notes %></p>
  </div>
</div>
